<main>
    <div class="inicio">
        <div class="loader">
        </div>
        <form class="businessSelection inv">
            <label for="business">Seleccione la empresa:</label>
            <select id="business" name="business">
                <option value="sate">SATELITAL TELECOMUNICACIONES</option>
                <option value="gf">GLOBAL FIBER PERU</option>
                <option value="oye">INVERSIONES O & E</option>
                <option value="cyg">OPERACIONES C & G</option>
                <option value="syr">INVERSIONES Y OPERACIONES S & R</option>
                <option value="myr">OPERACIONES M & R</option>
                <option value="foa">FIBRA ÓPTICA AMAZONICA DEL PERU</option>
                <option value="contelco">CONTRATISTAS Y CONSULTORES TELCO</option>
            </select>
            <button id="setBusiness">Ingresar</button>
        </form>
    </div>
    <div class="actions">
        {{!-- 20 --}}
        <div class="logo">
            <span class="material-symbols-outlined unselectable" id="changeBusiness" title="Cmabiar Empresa">
                refresh
            </span>
            <h1>VALIDADOR</h1>
        </div>
        {{!-- 20 --}}
        <div class="loadOptions" title="Cargar archivo">
            <input style="display: none;" type="file" id="excelFileInput" accept=".xls,.xlsx" />
            <div class="buttonFile">
                <span class="material-symbols-outlined">
                    ads_click
                </span>
                <div class="filename">
                    Cargar Archivo...
                </div>
            </div>
            <span id="checkFile" class="material-symbols-outlined">
                cloud_upload
            </span>
        </div>
        {{!-- 12 --}}
        <div class="totalRegisters">
            Registros Totales: <span id="total"
                title="Indica la cantidad de filas ocupadas en el archivo Excel, si hay filas vacías contarán, pero no aparecerán.">0</span>
        </div>
        {{!-- 20 --}}
        <div class="progressBar">
            <div class="allBar">
                <div class="progressInfo">
                    <span id="current"></span>
                    <span id="separator"></span>
                    <span id="totalSelected"></span>
                </div>
                <div class="currentPos">
                </div>
            </div>
        </div>
        {{!-- 10 --}}
        <div class="buttons">
            <span class="material-symbols-outlined unselectable" id="startScan" title="Iniciar Evaluación">
                play_arrow
            </span>
            <span class="material-symbols-outlined unselectable disabled" id="downloadFile" title="Descargar Reporte">
                download
            </span>
        </div>
    </div>
    <div class="content">
        <div class="tableHeader">
            <div class="registro">
                <div></div>
                <div>
                    <label for="regCheckbox" id="labelAllRegCheckbox">

                    </label>
                </div>
                <div>Fecha</div>
                <div>Código</div>
                <div>Serie</div>
                <div>Número</div>
                <div>RUC</div>
                <div>Total</div>
                <div>Estado Comprobante</div>
                <div>Estado RUC</div>
                <div>Estado de Domicilio</div>
                <div>Resultado</div>
                <div>Observaciones</div>
            </div>
        </div>
        <div class="tableBody">

        </div>
        <div class="assistant">
            <div class="validacionIndividual">
                <div class="imgContainer" title="Evaluar un comprobante">
                    <img src="./images/documentIcon.png" alt="Icono de Validación Individual">
                </div>
                <div class="modalVI inv">
                    <form class="individualValidation">
                        <div class="closeButton" title="Cerrar Evaluación Individual">X</div>
                        <label for="fechaEmision">
                            <p>
                                Fecha de Emisión:
                            </p>
                            <input type="date" name="fechaEmision" id="fechaEmision">
                        </label>
                        <label for="codigoComprobante">
                            <p>
                                Código de Comprobante:
                            </p>
                            <input type="text" name="codigoComprobante" id="codigoComprobante">
                        </label>
                        <label for="numeroSerie">
                            <p>
                                Número de Serie:
                            </p>
                            <input type="text" name="numeroSerie" id="numeroSerie">
                        </label>
                        <label for="numeroComprobante">
                            <p>
                                Número de Comprobante:
                            </p>
                            <input type="text" name="numeroComprobante" id="numeroComprobante">
                        </label>
                        <label for="rucEmisor">
                            <p>
                                RUC:
                            </p>
                            <input type="text" name="rucEmisor" id="rucEmisor">
                        </label>
                        <label for="montoTotal">
                            <p>
                                Monto Total:
                            </p>
                            <input type="text" name="montoTotal" id="montoTotal">
                        </label>
                        <button class="evaluarIV">Evaluar</button>
                    </form>
                    <div class="resultIndividualValidation inv">
                        <div class="loader">
                        </div>
                        <div class="estadoComprobante"></div>
                        <div class="estadoRuc"></div>
                        <div class="estadoDomicilioRuc"></div>
                        <div class="observaciones"></div>
                    </div>
                </div>
            </div>
            <div class="informante inv">
                <div class="msgContainer">
                    <p class="msg">Estoy a la espera de 1 comprobante, espera un poco más por favor.</p>
                </div>
                <div class="imgContainer" title="Evaluar un comprobante">
                    <img src="./images/assistantIcon.png" alt="Icono de Informante">
                </div>
            </div>
        </div>
    </div>
</main>
<script src="./js/enableNotification.js"></script>
<script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
<script src="./js/loadShowXLS.js"></script>
<script src="./js/script.js"></script>
<script type="module" src="./js/arrayValidate.js"></script>